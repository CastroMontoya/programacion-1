#include "stdafx.h"
#include "conio.h"
#include "math.h"
#include <iostream>


using namespace std;

void main ()
{
float N,x,sig,s,i,f;

cout<<"ingresar N: ";
cin>> N;
cout<<"ingresar x: ";
cin>>x;


f=1;
sig=1;
for(i=0;i<=N;i++)
  {if (i==0){s=5;}
  else	{
			f=f*(i+1);
			s=s-sig*(pow(x,i))/f;
			sig=-1*sig;
		}
		
  }
cout<<"la suma sera : "<<s;
getch();
getch();


}


