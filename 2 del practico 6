#include "stdafx.h"
#include "conio.h"
#include "math.h"
#include <iostream>


using namespace std;

int main ()
{
	int i,n,s;
	cout<<"ingrese N:\n";
	cin>>n;
	s=0;
	for(i=1;i<=n*2;i=i+2)
	{	s=s+i;
		cout<<s<<"="<<s<<"+"<<i;
		puts("");
	}
	cout<<"la suma es :"<<s;
	getchar();
	getchar();
}
